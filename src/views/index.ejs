<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADS</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        /* Estilos Generales */
        :root {
            --background-color: white;
            --text-color: #333;
            --primary-color: #FF5722;
            --secondary-color: #FFEED2;
            --box-shadow-color: rgba(0, 0, 0, 0.1);
            --border-color: #FF5722;
            --menu-bg-color: #FF5722;
        }

        [data-theme="dark"] {
            --background-color: #1e1e1e;
            --text-color: #ffffff;
            --primary-color: #FF5722;
            --secondary-color: #333;
            --box-shadow-color: rgba(255, 255, 255, 0.1);
            --border-color: #FF5722;
            --menu-bg-color: #FF7043;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Roboto', sans-serif;
            line-height: 1.6;
            color: var(--text-color);
            background-color: var(--background-color);
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Estilos del Encabezado */
        header {
            background-color: var(--background-color);
            padding: 0.5rem 0;
            box-shadow: 0 2px 5px var(--box-shadow-color);
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        header nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo img {
            max-width: 150px;
            height: auto;
        }

        nav ul {
            list-style: none;
            display: flex;
            gap: 1rem;
        }

        nav ul li a {
            font-size: 1rem;
            font-weight: bold;
            color: var(--primary-color);
            padding: 0.5rem;
            transition: background-color 0.3s ease;
        }

        nav ul li a:hover {
            background-color: var(--secondary-color);
            border-radius: 8px;
        }

        /* Menú Desplegable de Paginación */
        .menu-container {
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1001;
        }

        .menu-button, .theme-toggle-btn {
            display: flex;
            align-items: center;
            padding: 12px 18px;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 500;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 4px 12px var(--box-shadow-color);
        }

        .menu-button::after {
            content: '▼';
            margin-left: 10px;
            font-size: 12px;
            transition: transform 0.3s ease;
        }
        
        .menu-button.active::after{
            transform: rotate(180deg);
        }

        .menu-button:hover, .theme-toggle-btn:hover {
            background-color: var(--hover-bg-color);
            box-shadow: 0 6px 15px var(--box-shadow-color);
        }

        .theme-toggle-btn {
            position: fixed;
            top: 100px; /* Se movió más abajo */
            right: 20px;
        }

        .menu {
            display: none;
            position: absolute;
            top: 60px;
            left: 0;
            width: 200px;
            background-color: var(--menu-bg-color);
            border-radius: 10px;
            box-shadow: 0 4px 12px var(--box-shadow-color);
            padding: 10px 0;
            transition: opacity 0.3s ease, transform 0.3s ease;
            opacity: 0;
            transform: translateY(-10px);
        }

        .menu.show {
            display: block;
            opacity: 1;
            transform: translateY(0);
        }

        .menu ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .menu li {
            margin: 0;
        }

        .menu a {
            display: block;
            padding: 10px 20px;
            color: white;
            text-decoration: none;
            font-size: 16px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .menu a:hover {
            background-color: var(--hover-bg-color);
        }

        /* Sección Hero */
        .hero {
            background-color: var(--background-color);
            color: var(--text-color);
            text-align: center;
            padding: 6rem 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin-top: 80px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .hero-content {
            max-width: 800px;
            margin: 0 auto;
        }

        .hero-logo {
            max-width: 200px;
            width: 100%;
            height: auto;
            margin-bottom: 2rem;
            animation: fadeInDown 1s both;
        }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 1.5rem;
            color: var(--primary-color);
            animation: fadeInUp 1s both;
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            animation: fadeInUp 1s both;
        }

        .cta-button {
            display: inline-block;
            background-color: var(--primary-color);
            color: white;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            border-radius: 30px;
            box-shadow: 0 4px 10px var(--box-shadow-color);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .cta-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px var(--box-shadow-color);
        }

        /* Animaciones */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Sección de Características */
        .features {
            padding: 5rem 0;
            background-color: var(--background-color);
            text-align: center;
        }

        .features h2 {
            margin-bottom: 2rem;
            font-size: 2.2rem;
            color: var(--primary-color);
            animation: fadeInUp 1s both;
        }

        .feature-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }

        .feature-item {
            text-align: center;
            background-color: var(--background-color);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 10px var(--box-shadow-color);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            animation: fadeInUp 1s both;
        }

        .feature-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px var(--box-shadow-color);
        }

        .feature-item img {
            margin-bottom: 1rem;
            width: 80px;
            height: 80px;
        }

        .feature-item h3 {
            margin-bottom: 0.5rem;
            font-size: 1.5rem;
            color: var (--primary-color);
        }

        .feature-item p {
            color: var (--text-color);
        }

        /* Sección de Muestra de la App */
        .app-showcase {
            padding: 5rem 0;
            background-color: var(--background-color);
            text-align: center;
        }

        .app-showcase h2 {
            margin-bottom: 2rem;
            font-size: 2.2rem;
            color: var (--primary-color);
        }

        .image-container {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
        }

        .showcase-image {
            width: 250px;
            height: 500px; /* Ajusta según sea necesario */
            border-radius: 10px;
            box-shadow: 0 4px 10px var(--box-shadow-color);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .showcase-image:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 15px var(--box-shadow-color);
        }

        /* Pie de Página */
        footer {
            background-color: var(--background-color);
            color: var (--text-color);
            text-align: center;
            padding: 1.5rem 0;
            border-top: 3px solid var(--border-color);
            box-shadow: 0 -4px 10px var(--box-shadow-color);
        }

        footer p {
            font-size: 1rem;
            color: var (--text-color);
        }

        /* Diseño Responsivo */
        @media (max-width: 768px) {
            header nav {
                flex-direction: column;
                align-items: flex-start;
            }

            nav ul {
                flex-direction: column;
                gap: 0.5rem;
            }

            .logo img {
                max-width: 120px;
            }

            .hero h1 {
                font-size: 2.5rem;
            }

            .hero p {
                font-size: 1.1rem;
            }

            .hero-logo {
                max-width: 150px;
            }

            .cta-button {
                font-size: 1rem;
                padding: 0.8rem 1.5rem;
            }

            .feature-grid {
                grid-template-columns: 1fr;
            }

            .showcase-image {
                width: 90%;
                height: auto;
            }
        }
    </style>
</head>

<body>
    <header>
        <div class="container">
            <nav>
                <a href="#" class="logo">
                    <img src="images/FontLogo.png" alt="Logo de la App">
                </a>
                <ul>
                    <li><a href="#">Inicio</a></li>
                    <li><a href="#caracteristicas">Características</a></li>
                    <li><a href="#">Descargar</a></li>
                    <li><a href="#">Contacto</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="menu-container">
        <button class="menu-button" onclick="toggleMenu()">Menú</button>
        <nav class="menu" id="menu">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/pag2">Sobre nosotros</a></li>
            </ul>
        </nav>
    </div>

    <button class="theme-toggle-btn" id="theme-toggle">Cambiar Tema</button>

    <main>
        <section class="hero">
            <div class="container">
                <div class="hero-content">
                    <img src="images/Logo.png" alt="Logo de la App" class="hero-logo">
                    <h1>Bienvenido a Nuestra Aplicación</h1>
                    <p>Descubre el poder de nuestra innovadora aplicación móvil, diseñada para facilitarte la vida en cada aspecto.</p>
                    <a href="#" class="cta-button">Descargar Ahora</a>
                </div>
            </div>
        </section>

        <section class="features">
            <div class="app-info" id="caracteristicas">
                <h2>Características</h2>
                <div class="feature-grid">
                    <div class="feature-item">
                        <img src="images/Conexion.png" alt="Feature 1">
                        <h3>Conexión</h3>
                        <p>Para mayor seguridad a la hora de contratar un servicio de reparación.</p>
                    </div>
                    <div class="feature-item">
                        <img src="images/direccion-del-mapa.png" alt="Feature 2">
                        <h3>Ubicacion de trabajadores</h3>
                        <p>Te muestra donde y que tipo de trabajador hay cerca de ti.</p>
                    </div>
                    <div class="feature-item">
                        <img src="images/Reparacion.png" alt="Feature 3">
                        <h3>Mantenimientos generales</h3>
                        <p>Encuentra el trabajador para cada area de Mantenimientos Generales</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="app-showcase">
            <div class="container">
                <h2>Explora la App</h2>
                <div class="image-container">
                    <img src="/images/InterfazCliente.png" alt="Interfaz Cliente" class="showcase-image">
                    <img src="/images/InterfazTrabajador.png" alt="Interfaz Trabajador" class="showcase-image">
                </div>
            </div>
        </section>
    </main>

    <footer>
        <p>&copy; 2024 ADS. Todos los derechos reservados.</p>
    </footer>

    <script>
        function toggleMenu() {
            const menuButton = document.querySelector('.menu-button');
            const menu = document.getElementById('menu');
            menu.classList.toggle('show');
            menuButton.classList.toggle('active');
        }

        // Cerrar el menú si se hace clic fuera de él
        window.onclick = function(event) {
            const menuButton = document.querySelector('.menu-button');
            const menu = document.getElementById('menu');
            if (!event.target.matches('.menu-button')) {
                if (menu.classList.contains('show')) {
                    menu.classList.remove('show');
                    menuButton.classList.remove('active');
                }
            }
        }

        // Cambiar Tema
        const themeToggleBtn = document.getElementById('theme-toggle');
        themeToggleBtn.addEventListener('click', () => {
            const theme = document.documentElement.getAttribute('data-theme') === 'light' ? 'dark' : 'light';
            document.documentElement.setAttribute('data-theme', theme);
            localStorage.setItem('theme', theme);
            themeToggleBtn.classList.toggle('active');
        });

        // Aplicar el tema basado en la preferencia del usuario
        const currentTheme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-theme', currentTheme);
        if (currentTheme === 'dark') {
            document.getElementById('theme-toggle').classList.add('active');
        }
    </script>
</body>
</html>